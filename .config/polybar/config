[colors]
background = #00000000
background-alt = ${xrdb:color0}

; night_sky -   #afffa3
; meteor -      #ddc3ff
; sunset -      #dbd0b7
; red_forest -  #eeb1ad
foreground = ${xrdb:color7}
; foreground = #afffa3
foreground-alt = #55
alert = #bd2c40

red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}
white = ${xrdb:color7}

;primary = ${xrdb:color1}
;secondary = ${xrdb:color5}

primary = ${xrdb:color6}
secondary = ${xrdb:color1}

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
format-background = ${colors.background-alt}

[bar/nsbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 2%
offset-x = 0
offset-y = 0

bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 3
overline-color = #f00
underline-size = 3
underline-color = #00f

;border-size = 3
;border-color = #7054d4

border-top-size = 40
border-top-color = #00000000
;border-bottom = 10
border-bottom-color = #00000000
border-left-size = 40
border-left-color = #00000000
border-right-size  = 40
border-right-color = #00000000

;radius = 5
spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 2
module-margin-right = 2

font-0 = Fira Mono:pixelsize=16;2
font-1 = Fira Mono:pixelsize=24:fontformat=truetype;1
font-2 = Fira Mono:pixelsize=16;2
font-3 = IPAGothic:pixelsize=16;2

modules-left = menu-apps wintext mpdcontrols mpdinfo
modules-center = i3
modules-right = pulseaudio xbacklight battery date

;tray-position = middle
;tray-padding = 5
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

scroll-up = xbacklight -inc 2
scroll-down = xbacklight -dec 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-underline = ${colors.secondary}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home
mount-2 = /invalid/mountpoint

label-mounted = %mountpoint%: %percentage_free%

label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
strip-wsnumbers = true
index-sort = true

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background-alt}

label-name = %name%

label-focused = %{B#66} %name% %{B-}
;label-focused-padding = 1
label-occupied = %{B#0f0} %name% %{B-}
;abel-occupied-padding = 1
label-empty = %{B#00f} %name% %{B-}
;abel-empty-padding = 1
label-urgent = %{B#00f} %name% %{B-}
;abel-urgent-padding = 1


;label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-overline = ${colors.primary}
label-focused-padding = 1
;
;label-occupied= %name%
label-occupied-background = ${colors.background-alt}
label-occupied-underline = ${colors.secondary}
label-occupied-overline = ${colors.secondary}
label-occupied-padding = 1
;
;label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
;
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-overline = ${self.label-focused-overline}
label-visible-padding = ${self.label-focused-padding}
;
;label-empty = %name%
label-empty-foreground = #66
label-empty-background = ${self.label-focused-background}
label-empty-underline = ${self.label-occupied-underline}
label-empty-overline = ${self.label-occupied-overline}
label-empty-padding = ${self.label-focused-padding}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
label-state = %name%
label-mode = %mode%
strip-wsnumbers = true
index-sort = true
wrapping-scroll = false

label-mode-padding = 0
;label-mode-foreground = #000
;label-mode-background = ${colors.primary}

label-blank = " "

label-focused = %name%
;label-focused-foreground= ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-overline = ${colors.green}
label-focused-padding = 1
;label-focused-padding-background = $(colors.background-alt}

label-unfocused = %name%
;label-unfocused-foreground = ${colors.secondary}
label-unfocused-underline = ${colors.secondary}
label-unfocused-overline = ${colors.green}
label-unfocused-padding = ${self.label-focused-padding}

label-urgent = %name%!
label-urgent-padding = ${self.label-focused-padding}

label-visible = %name%
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

